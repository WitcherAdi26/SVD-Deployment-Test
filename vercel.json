{    
    "functions": { "python": "3.11.4" },
    
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb", 
                "pip": ["--use-pep517"]
            }
        }
    ],
    
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/main.py"
        }
    ]
}
